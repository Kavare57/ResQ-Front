<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for development debugging -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- LiveKit cloud domain -->
        <domain includeSubdomains="true">resq-poyiq9j7.livekit.cloud</domain>
    </domain-config>
    
    <!-- Trust system certificates for development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">192.168.1.9</domain>
    </domain-config>
    
    <!-- Allow cleartext traffic for local network IPs (development) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
